<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.daniel.facilcb.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07">

            <TextView
                android:text="FacilCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_menu"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/colorAccent"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.58">

            <GridLayout
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03">

            </GridLayout>

            <GridLayout
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:layout_weight="0.06"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/shieldlogo" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="18dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <GridLayout android:layout_height="match_parent"
                    android:layout_width="20dp">

                </GridLayout>

                <GridLayout
                    android:layout_width="106dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/a2"
                        android:id="@+id/squad_button_menu"
                        android:background="@drawable/a2"
                        android:layout_width="110dp" />
                </GridLayout>

                <GridLayout android:layout_height="wrap_content"
                    android:layout_width="87dp">

                    <ImageButton
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/b2"
                        android:id="@+id/ips_button_menu"
                        android:background="@drawable/b2"
                        android:layout_width="93dp" />
                </GridLayout>

                <GridLayout android:layout_height="match_parent"
                    android:layout_width="106dp">

                    <ImageButton
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/c2"
                        android:id="@+id/gps_button_menu"
                        android:layout_weight="0.23"
                        android:background="@drawable/c2"
                        android:layout_width="90dp" />
                </GridLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="144dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.23">

                <GridLayout android:layout_height="match_parent"
                    android:layout_width="20dp">

                </GridLayout>

                <GridLayout
                    android:layout_width="106dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/d2"
                        android:id="@+id/info_button_menu"
                        android:background="@drawable/d2" />
                </GridLayout>

                <GridLayout android:layout_height="match_parent"
                    android:layout_width="106dp">

                    <ImageButton
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/e2"
                        android:id="@+id/message_button_menu"
                        android:background="@drawable/e2"
                        android:layout_width="93dp" />
                </GridLayout>

                <GridLayout android:layout_height="103dp"
                    android:layout_width="14dp">

                </GridLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
